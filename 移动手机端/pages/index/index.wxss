/**index.wxss**/

page {
  background: #f5f5f5;
  height: 100%;
}

.recommend_box {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 460rpx;
  justify-content: center;
}

.recommend_img {
  margin-left: 20rpx;
  display: inline-block;
  width: 680rpx;
  height: 400rpx;
  border-radius: 20rpx;
}

.scroll-view {
  white-space: nowrap;
}

.theme_box {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  height: 460rpx;
  flex-wrap: wrap;
  background: #fff;
  justify-content: center;
  align-items: center;
}

.theme {
  display: flex;
  flex-direction: column;
  width: 170rpx;
  height: 200rpx;
  align-items: center;
  justify-content: center;
}

.theme_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  background: yellow;
}

.theme_name {
  line-height: 60rpx;
  height: 60rpx;
  font-size: 26rpx;
}

.entertainment_box {
  width: 750rpx;
  height: 320rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.entertainment_background {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 750rpx;
  height: 280rpx;
  background: #fff;
}

.entertainment_list {
  margin-left: 20rpx;
  display: inline-block;
  width: 240rpx;
  height: 180rpx;
position: relative;
}
.entertainment_img {
  width: 240rpx;
  height: 180rpx;
  opacity: 0.8;  
}
.entertainment_mask {
  width: 240rpx;
  height: 180rpx;
  position: absolute;
  top: 0;
  background: black;
  opacity: 0.4;
}
.entertainment_name {
  width: 240rpx;
  height: 180rpx;
  position: absolute;
  left: 0;
  color: #fff;
  font-weight: bolder;
  text-align: center;
  line-height: 180rpx;
  font-size: 14px;
}
