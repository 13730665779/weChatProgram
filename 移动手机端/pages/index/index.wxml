  </scroll-view>
</view>
<view class='theme_box'>
  <view class='theme'>
    <image src='../../images/tree.jpg' class='theme_img'></image>
    <text class='theme_name'>森林</text>
  </view>
  <view class='theme'>
   <image src='../../images/ocean.jpg' class='theme_img'></image>
    <text class='theme_name'>海洋</text>
  </view>
  <view class='theme'>
    <image src='../../images/red_maple_leaf.jpg' class='theme_img'></image>
    <text class='theme_name'>枫叶</text>
  </view>
  <view class='theme'>
    <image src='../../images/grassland.jpg' class='theme_img'></image>
    <text class='theme_name'>草原</text>
  </view>
  <view class='theme'>
