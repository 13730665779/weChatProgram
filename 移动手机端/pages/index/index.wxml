    <scroll-view class="scroll-view" scroll-x="true">
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/Fairytale_castle.jpg'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>童话城堡</text>
      </view>
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/blue_ocean.jpeg'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>蓝色海洋</text>
      </view>
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/Titanic.png'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>经典怀旧</text>
      </view>
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/Doraemon.jpeg'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>哆啦A梦</text>
      </view>
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/pink_memories.jpg'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>粉色回忆</text>
      </view>
      <view class='entertainment_list'>
        <image class='entertainment_img' src='../../images/blue_dock.jpg'></image>
        <view class='entertainment_mask'></view>
        <text class='entertainment_name'>蓝色船坞</text>
      </view>
    </scroll-view>
  </view>
</view>